{
    "name": "imdbphp/imdbphp",
    "description": "Library for retrieving film and tv information from IMDb",
    "license": "GPL-2.0-or-later",
    "autoload": {
        "psr-4": {
            "Imdb\\": "src/Imdb"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "require": {
        "php": ">=5.6",
        "psr/log": "^1.0",
        "ext-curl": "*",
        "ext-dom": "*",
        "psr/simple-cache": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "mockery/mockery": "^1.1",
        "cache/array-adapter": "^1.0",
        "phpstan/phpstan": "^0.9.2",
        "friendsofphp/php-cs-fixer": "^2.12"
    },
    "scripts": {
        "test": "phpunit -c tests/phpunit.xml tests",
        "lint": "php-cs-fixer fix --no-interaction --dry-run --diff -v",
        "phpstan": "phpstan analyse -c phpstan.neon -l 0 src/Imdb/"
    }
}
